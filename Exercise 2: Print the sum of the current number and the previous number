
def main():
    print("Printing current and previous number sum in a range(10)")
    for x in range(0,10):
        if x == 0:
            print(f"Current Number {x} Previous Number  {x}  Sum:  {x}")
            
        else:
            print(f"Current Number {x} Previous Number  {x-1}  Sum:  {(x)+(x-1)}")
    
if __name__ == "__main__":
    main()
